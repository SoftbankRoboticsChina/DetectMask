<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/take_photo_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_320_dp"
        android:layout_marginBottom="@dimen/dimen_50_dp">

        <Button
            android:id="@+id/take_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/start" />

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/photo_img_width"
            android:layout_height="@dimen/photo_img_height"
            android:layout_centerInParent="true"
            android:background="@drawable/image_shape"
            android:padding="3dp"
            android:src="@drawable/ic_camera" />
    </RelativeLayout>

</RelativeLayout>